@model BookingWeb.Server.Models.Benxe

<!-- Areas/Admin/Views/QuanLyNguoiDung/Index.cshtml -->
@{
    ViewData["Title"] = "Chi tiết bến xe " + Model.TenBenXe;
}

<h1 class="h3 mb-2 text-gray-800">Chỉnh Sửa Bến Xe</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thông tin bến xe</h6>
    </div>
    <div class="card-body p-3">
        <form asp-action="Edit" asp-controller="BenXeAdmin" method="post" >
            <input type="hidden" asp-for="IdBenXe" />
            <div class="mb-3">
                <label class="form-label">Tên bến xe</label>
                <input type="text" class="form-control" id="input-email" asp-for="TenBenXe" required>
            </div>
            <div class="mb-3">
                <label for="tinhThanh" class="form-label">Tỉnh thành</label>
                <select name="IdTinhThanh" id="tinhThanh" class="form-control" required>

                    <option value="@Model.IdTinhThanh">@Model.IdTinhThanhNavigation.TenTinhThanh</option>
                    @foreach (var tt in ViewBag.TinhThanhList)
                    {
                        @if(Model.IdTinhThanh ==  tt.IdTinhThanh)
                        {
                            continue;
                        }
                        <option value="@tt.IdTinhThanh">@tt.TenTinhThanh</option>
                    }
                </select>
            </div>
            <input type="hidden"  class="form-control" id="trangThai" name="trangThai"  asp-for="TrangThai" required />
            <div class="form-group float-right">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="button" class="btn btn-danger" onclick="window.history.back()">Cancel</button>
            </div>
        </form>
    </div>
</div>